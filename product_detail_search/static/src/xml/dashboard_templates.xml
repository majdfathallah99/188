<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

  <!-- Dashboard wrapper -->
  <t t-name="product_detail_search.Dashboard">
    <div class="pds o_form_view">
      <div class="pds__search">
        <form class="pds__searchForm" t-on-submit.prevent="onKeyDown">
          <!-- IMPORTANT: bindings for auto-scan + autofocus -->
          <input class="pds__input scan-input"
                 t-ref="scanInput"
                 t-att-value="state.barcode"
                 t-on-input="onInput"
                 t-on-keydown="onKeyDown"
                 placeholder="امسح أو اكتب الباركود"/>
        </form>
      </div>

      <t t-if="state.details">
        <t t-set="details" t-value="state.details"/>
        <div class="pds__cards">
          <!-- قطعة -->
          <div class="pdsCard pdsCard--blue">
            <div class="pdsCard__title">قطعة</div>
            <div class="pdsCard__value"><t t-esc="details.price or 0"/></div>
            <div class="pdsCard__sub"><t t-esc="details._unit_sub"/></div>
          </div>

          <!-- التعبئة -->
          <div class="pdsCard pdsCard--orange">
            <div class="pdsCard__title">التعبئة</div>
            <div class="pdsCard__value"><t t-esc="details.package_price or 0"/></div>
            <div class="pdsCard__sub"><t t-esc="details._pack_sub or ''"/></div>
          </div>
        </div>
      </t>
    </div>
  </t>

</templates>
