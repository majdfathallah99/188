<odoo>
  <!-- Company form: add HR policy group under the main sheet (robust for v18) -->
  <record id="view_company_form_inherit_timeoff_policy" model="ir.ui.view">
    <field name="name">res.company.form.timeoff.policy.v18</field>
    <field name="model">res.company</field>
    <field name="inherit_id" ref="base.view_company_form"/>
    <field name="arch" type="xml">
      <xpath expr="//form/sheet" position="inside">
        <group string="HR Policies">
          <group string="Time Off Submission">
            <field name="restrict_late_timeoff_submission"/>
            <field name="late_timeoff_threshold_days" attrs="{'invisible': [('restrict_late_timeoff_submission','=',False)]}"/>
            <div class="o_form_label" attrs="{'invisible': [('restrict_late_timeoff_submission','=',False)]}">Example: With 2 days, a leave starting on the 1st is blocked on/after the 4th.</div>
          </group>
        </group>
      </xpath>
    </field>
  </record>
</odoo>
