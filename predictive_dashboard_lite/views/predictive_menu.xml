<odoo>
    <!-- App Root: shows as a tile on Home -->
    <menuitem id="menu_predictive_app_root" name="Predictive" sequence="25"/>

    <!-- Action: Predictive Wizard -->
    <record id="action_predictive_wizard" model="ir.actions.act_window">
        <field name="name">Predictive Dashboard</field>
        <field name="res_model">predictive.dashboard.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
    </record>

    <!-- Dashboard subtree under the App -->
    <menuitem id="menu_predictive_root"
              name="Predictive Dashboard"
              parent="predictive_dashboard_lite.menu_predictive_app_root"
              sequence="1"/>

    <menuitem id="menu_predictive_wizard"
              name="Dashboard"
              parent="predictive_dashboard_lite.menu_predictive_root"
              action="predictive_dashboard_lite.action_predictive_wizard"
              sequence="1"/>

    <!-- App Icon -->
    <record id="menu_predictive_app_icon" model="web.icon">
        <field name="name">predictive_app_icon</field>
        <field name="category">apps</field>
        <field name="display_name">Predictive</field>
        <field name="target">menu</field>
        <field name="menu_id" ref="predictive_dashboard_lite.menu_predictive_app_root"/>
        <field name="image_svg" type="base64" file="predictive_dashboard_lite/static/description/icon.svg"/>
    </record>
</odoo>