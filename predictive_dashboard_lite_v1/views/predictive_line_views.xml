<odoo>
    <record id="view_predictive_line_list" model="ir.ui.view">
        <field name="name">predictive.dashboard.line.list</field>
        <field name="model">predictive.dashboard.line</field>
        <field name="arch" type="xml">
            <list create="0" edit="0" delete="0">
                <field name="display_key" string="Key"/>
                <field name="uom_id" readonly="1"/>
                <field name="qty_window" readonly="1"/>
                <field name="window_days" readonly="1"/>
                <field name="daily_rate" readonly="1" digits="[16,4]"/>
                <field name="forecast_qty" readonly="1"/>
                <field name="stock_onhand" readonly="1"/>
                <field name="days_until_shortage" readonly="1" digits="[16,2]"/>
                <field name="shortage_date" readonly="1"/>
            </list>
        </field>
    </record>
</odoo>
