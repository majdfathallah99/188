<odoo>

    <!-- ===== List View (قائمتك كما هي تقريبًا) ===== -->
    <record id="view_predictive_line_list" model="ir.ui.view">
        <field name="name">predictive.dashboard.line.list</field>
        <field name="model">predictive.dashboard.line</field>
        <field name="arch" type="xml">
            <list string="Forecast Lines" create="0" edit="0" delete="0">
                <field name="display_key" string="Key"/>
                <field name="uom_id" readonly="1"/>
                <field name="qty_window" readonly="1"/>
                <field name="window_days" readonly="1"/>
                <field name="daily_rate" readonly="1" digits="[16,4]"/>
                <field name="forecast_qty" readonly="1"/>
                <field name="stock_onhand" readonly="1"/>
                <field name="days_until_shortage" readonly="1" digits="[16,2]"/>
                <field name="shortage_date" readonly="1"/>
                <field name="wizard_id"/>
            </list>
        </field>
    </record>

    <!-- ===== Graph View (Bar Chart) ===== -->
    <record id="view_predictive_line_graph" model="ir.ui.view">
        <field name="name">predictive.dashboard.line.graph</field>
        <field name="model">predictive.dashboard.line</field>
        <field name="arch" type="xml">
            <graph string="Forecast by Key" type="bar">
                <!-- المحور X -->
                <field name="display_key" type="row"/>
                <!-- القيم -->
                <field name="forecast_qty" type="measure"/>
                <!-- ممكن تضيف مقاييس أخرى:
                <field name="daily_rate" type="measure"/>
                <field name="stock_onhand" type="measure"/>
                -->
            </graph>
        </field>
    </record>

    <!-- ===== Pivot View (اختياري لكن مفيد للتحليل) ===== -->
    <record id="view_predictive_line_pivot" model="ir.ui.view">
        <field name="name">predictive.dashboard.line.pivot</field>
        <field name="model">predictive.dashboard.line</field>
        <field name="arch" type="xml">
            <pivot string="Forecast Pivot">
                <field name="display_key" type="row"/>
                <field name="wizard_id" type="col"/>
                <field name="forecast_qty" type="measure"/>
                <field name="daily_rate" type="measure"/>
                <field name="stock_onhand" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- ===== Search View (بحث وفلاتر جاهزة) ===== -->
    <record id="view_predictive_line_search" model="ir.ui.view">
        <field name="name">predictive.dashboard.line.search</field>
        <field name="model">predictive.dashboard.line</field>
        <field name="arch" type="xml">
            <search string="Search Forecast Lines">
                <field name="display_key" string="Key"/>
                <field name="wizard_id"/>
                <filter string="At Risk (<=7 days)" name="at_risk_7"
                        domain="[('days_until_shortage','!=',0),('days_until_shortage','<=',7)]"/>
                <filter string="OOS Today" name="oos_today"
                        domain="[('days_until_shortage','=',0)]"/>
                <group expand="0" string="Group By">
                    <filter string="Wizard Run" name="grp_wizard" context="{'group_by':'wizard_id'}"/>
                    <filter string="UoM" name="grp_uom" context="{'group_by':'uom_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ===== Action لفتح (Graph + List + Pivot) ===== -->
    <record id="action_predictive_lines_graph" model="ir.actions.act_window">
        <field name="name">Forecast Graph</field>
        <field name="res_model">predictive.dashboard.line</field>
        <field name="view_mode">graph,list,pivot</field>
        <field name="search_view_id" ref="view_predictive_line_search"/>
        <!-- ملاحظة: كون الموديل Transient، السطور تخص تشغيلات الـ Wizard الحالية -->
        <field name="context">{}</field>
    </record>

    <!-- ===== Menu لفتح الـ Graph من القائمة الرئيسية ===== -->
    <menuitem id="menu_predictive_graph"
              name="Forecast Graph"
              parent="menu_predictive_root"
              action="action_predictive_lines_graph"
              sequence="30"/>

</odoo>
