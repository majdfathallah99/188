<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- List View -->
    <record id="view_predictive_wizard_list" model="ir.ui.view">
        <field name="name">predictive.dashboard.wizard.list</field>
        <field name="model">predictive.dashboard.wizard</field>
        <field name="arch" type="xml">
            <list string="Predictive Runs" create="1" delete="1" editable="bottom">
                <field name="name"/>
                <field name="state"/>
                <field name="company_id"/>
                <field name="warehouse_id"/>
                <field name="product_category_id"/>
                <field name="group_by"/>
                <field name="method"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="horizon_days"/>
                <field name="top_n"/>
                <field name="line_count"/>
                <!-- أزرار الإجراءات (بدون attrs في v17+) -->
                <button name="action_compute" type="object" string="Compute"/>
                <button name="action_export_xlsx" type="object" string="Export XLSX"/>
                <button name="action_print_report" type="object" string="Print PDF"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_predictive_wizard_search" model="ir.ui.view">
        <field name="name">predictive.dashboard.wizard.search</field>
        <field name="model">predictive.dashboard.wizard</field>
        <field name="arch" type="xml">
            <search string="Search Predictive Runs">
                <field name="name"/>
                <field name="company_id"/>
                <field name="warehouse_id"/>
                <field name="product_category_id"/>
                <field name="group_by"/>
                <field name="method"/>
                <filter name="ready" string="Ready" domain="[('state','=','ready')]"/>
                <filter name="draft" string="Draft" domain="[('state','=','draft')]"/>
                <group expand="0" string="Group By">
                    <filter name="g_company" string="Company" context="{'group_by':'company_id'}"/>
                    <filter name="g_wh" string="Warehouse" context="{'group_by':'warehouse_id'}"/>
                    <filter name="g_method" string="Method" context="{'group_by':'method'}"/>
                    <filter name="g_state" string="State" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_predictive_runs" model="ir.actions.act_window">
        <field name="name">Predictive Runs</field>
        <field name="res_model">predictive.dashboard.wizard</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_predictive_wizard_search"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create and compute a new predictive run.
            </p>
        </field>
    </record>

    <!-- Menu item (تأكد من parent الصحيح لديك) -->
    <menuitem id="menu_predictive_runs"
              name="All Operations"
              parent="predictive_dashboard_lite_v1.menu_predictive_root"
              action="action_predictive_runs"
              sequence="30"/>
</odoo>
