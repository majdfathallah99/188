<!-- views/predictive_menu.xml -->
<odoo>
    <menuitem id="menu_predictive_root" name="Predictive" sequence="10"/>

    <record id="action_predictive_wizard" model="ir.actions.act_window">
        <field name="name">Dashboard</field>
        <field name="res_model">predictive.dashboard.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
    </record>
    <menuitem id="menu_predictive_dashboard"
              name="Dashboard"
              parent="menu_predictive_root"
              action="action_predictive_wizard"
              sequence="10"/>

    <record id="action_predictive_all_operations" model="ir.actions.act_window">
        <field name="name">All Operations</field>
        <field name="res_model">predictive.dashboard.wizard</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="menu_predictive_all_operations"
              name="All Operations"
              parent="menu_predictive_root"
              action="action_predictive_all_operations"
              sequence="20"/>

    <record id="action_predictive_lines_graph" model="ir.actions.act_window">
        <field name="name">Forecast Graph</field>
        <field name="res_model">predictive.dashboard.line</field>
        <field name="view_mode">graph,list</field>
    </record>
    <menuitem id="menu_predictive_graph"
              name="Forecast Graph"
              parent="menu_predictive_root"
              action="action_predictive_lines_graph"
              sequence="30"/>
</odoo>
